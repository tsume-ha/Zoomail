{% load json_filter %}
{
    "message_list": [
        {% for message in page %}
            {
                "id": "{{message.id}}",
                "title": "{{message.title | escapejs}}",
                "content": "{{message.content | escapejs}}",
                "sender": "{{message.sender.get_short_name}}",
                "writer": "{{message.writer.get_short_name}}",
                "created_at": "{{message.created_at | date:"Y/m/d (D) H:i"}}",
                "updated_at": "{{message.updated_at | date:"Y/m/d (D) H:i"}}",
                "is_bookmarked": {% is_bookmarked message request.user %}
            }{% if not forloop.last %},{% endif %}
        {% endfor %}
    ],
    "has_next": {{page.has_next | lower}}
}